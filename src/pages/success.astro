---
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/global.css';
---

<BaseLayout title="Thank you | The Somatic Space">
  <div class="min-h-screen flex items-center justify-center px-4">
    <div class="max-w-2xl mx-auto text-center space-y-8 py-20">
      <h1 class="text-4xl md:text-5xl">Thank you</h1>

      <div class="space-y-6 text-lg text-[var(--color-text-secondary)]">
        <p>
          Your inquiry has been received. I'll respond within 1-2 business days with next steps, rates, and scheduling options.
        </p>

        <p>
          In the meantime, take care.
        </p>
      </div>

      <div class="pt-8">
        <a href="/" class="button">Return home</a>
      </div>
    </div>
  </div>
</BaseLayout>
