<script>
  // Clear hash on page load to always start at top
  if (window.location.hash) {
    history.replaceState(null, '', window.location.pathname);
    window.scrollTo(0, 0);
  }

  // Update active navigation dot on scroll
  function updateActiveDot() {
    const sections = document.querySelectorAll('.snap-section');
    const navDots = document.querySelectorAll('.nav-dot');

    const scrollPosition = window.scrollY + window.innerHeight / 2;

    sections.forEach((section, index) => {
      const sectionTop = section.offsetTop;
      const sectionBottom = sectionTop + section.offsetHeight;

      if (scrollPosition >= sectionTop && scrollPosition < sectionBottom) {
        navDots.forEach(dot => dot.classList.remove('active'));
        if (navDots[index]) {
          navDots[index].classList.add('active');
        }

        // Update dot color based on section background
        // Dots should be dark only for truly light sections (no background images)
        const isLight = section.classList.contains('bg-white') ||
                       section.classList.contains('bg-cream') ||
                       section.classList.contains('bg-warm') ||
                       section.classList.contains('bg-sand');

        const hasDarkBackground = section.classList.contains('about-section') ||
                                 section.classList.contains('sessions-section') ||
                                 section.classList.contains('training-section') ||
                                 section.classList.contains('testimonials-section') ||
                                 section.classList.contains('inquire-section') ||
                                 section.classList.contains('hero');

        navDots.forEach(dot => {
          if (hasDarkBackground) {
            dot.classList.remove('dark');
          } else if (isLight) {
            dot.classList.add('dark');
          }
        });
      }
    });
  }

  // Update on scroll
  window.addEventListener('scroll', updateActiveDot);

  // Update on load
  window.addEventListener('load', updateActiveDot);

  // Initialize Swiper for testimonials
  window.addEventListener('load', () => {
    const swiper = new Swiper('.testimonial-swiper', {
      loop: true,
      autoplay: {
        delay: 7000,
        disableOnInteraction: false,
      },
      pagination: {
        el: '.testimonial-pagination',
        clickable: true,
      },
      speed: 600,
      slidesPerView: 1,
    });

    // Connect custom navigation buttons
    document.querySelectorAll('.prev-btn').forEach(btn => {
      btn.addEventListener('click', () => swiper.slidePrev());
    });

    document.querySelectorAll('.next-btn').forEach(btn => {
      btn.addEventListener('click', () => swiper.slideNext());
    });
  });
</script>
